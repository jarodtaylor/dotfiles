{{ if .ssh.use_1password }}
Host *
  IdentityAgent "~/Library/Group Containers/2BUA8C4S2C.com.1password/t/agent.sock"
{{ end }}

Host github.com
  HostName github.com
  User git
  AddKeysToAgent yes
  UseKeychain yes
  PreferredAuthentications publickey
  IdentitiesOnly yes
  {{ if .ssh.use_1password }}
  IdentityFile ~/.ssh/id
  {{ else }}
  IdentityFile ~/.ssh/id_ed25519
  {{ end }}

Host github.com-work
  HostName github.com
  User git
  AddKeysToAgent yes
  UseKeychain yes
  PreferredAuthentications publickey
  IdentitiesOnly yes
  {{ if .ssh.use_1password }}
  IdentityFile ~/.ssh/work_id
  {{ else }}
  IdentityFile ~/.ssh/work_id_ed25519
  {{ end }}

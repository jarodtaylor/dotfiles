recipient = "age1mh2dqm4658zqnxethed0sw5hf0n28a8t4uw24w9akgwhgrzkwvssz90nst"

[data]
brew_prefix = {{ $brew_prefix | quote }}
ageKeyFile = {{ $ageKeyFile | quote }}

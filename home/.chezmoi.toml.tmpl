work_ssh_key = "{{- onepasswordRead "op://Personal/orsplwhcmkbfmxdwbf6udvpjvu/public_key" -}}"
{{- else }}
ssh_key = {{ promptString "Enter your personal SSH public key" | toJson }}
work_ssh_key = {{ promptString "Enter your work SSH public key" | toJson }}
{{- end }}
code_dir = "~/Code"

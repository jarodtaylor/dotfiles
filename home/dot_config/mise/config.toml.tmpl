[tools]
deno = "latest"
elixir = "latest"
erlang = "latest"
go = "latest"
node = "latest"
ruby = "latest"
"npm:@anthropic-ai/claude-code" = "latest"

[settings]
idiomatic_version_file = false

plugin_autoupdate_last_check_duration = '1 week'                # set to 0 to disable updates
verbose = false
http_timeout = "30s"
jobs = 4
not_found_auto_install = true
task_output = "prefix"
paranoid = false
experimental = true
trusted_config_paths = ["~/Code"]

{
  "title": "Ghostty Quick Terminal",
  "rules": [
    {
      "description": "Global Quick Terminal (Alt+Shift+Cmd+Ctrl+T)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "t",
            "modifiers": {
              "mandatory": [
                "left_command",
                "left_control",
                "left_shift",
                "left_option"
              ]
            }
          },
          "to": [
            {
              "shell_command": "open -a Ghostty --args --class QuickTerminal"
            }
          ]
        }
      ]
    }
  ]
}

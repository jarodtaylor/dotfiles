[user]
  name  = "Jarod Taylor"
  email = "jarodrtaylor@gmail.com"
  signingkey = {{ if .ssh.use_1password }}~/.ssh/id{{ else }}~/.ssh/id_ed25519{{ end }}

[includeIf "gitdir:{{ .work_dir }}/"]
  path = config-work

[include]
  path = conf.d/delta.conf

[color]
  ui = auto
  diff = auto
  status = auto
  branch = auto

[color "status"]
  added = blue
  updated = green
  changed = yellow
  untracked = cyan
  branch = magenta
  nobranch = normal
  unmerged = red

[init]
	defaultBranch = main

[branch]
  autosetuprebase = always

[core]
  editor = vim

[remote]
  pushDefault = origin

[fetch]
  prune = true

[merge]
  conflictStyle = zdiff3
  branchdesc = true
  log = true

[push]
  default = current

[pull]
  ff = only

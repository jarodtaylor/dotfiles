zmodule environment                                                                 #Sets generic Zsh built-in environment options.

zmodule input                                                                       #Applies correct bindkeys for input events.

zmodule archive                                                                     #Provides archive and unarchive functions for easy archive manipulation.

zmodule joke/zim-chezmoi --name zim-chezmoi                                         #Sets up chezmoi in Zsh.

zmodule joke/zim-mise --name zim-mise                                               #Sets up mise in Zsh.

zmodule exa                                                                         #Adds aliases and better defaults for exa/eza.  (Must be sourced after utility)

zmodule fzf                                                                         #Configures fzf for faster fetching of files and directories names.

zmodule git                                                                         #Provides nice git aliases and functions.

zmodule joke/zim-starship --name zim-starship                                       #Sets up starship in Zsh.

zmodule zsh-users/zsh-completions --name zsh-completions --fpath src                #Enables and configures smart and extensive tab completion. (must be sourced after all modules that add completion definitions)

zmodule completion                                                                  #Enables and configures smart and extensive tab completion. (must be sourced after all modules that add completion definitions)

zmodule zsh-users/zsh-syntax-highlighting --name zsh-syntax-highlighting            #Fish-like syntax highlighting for Zsh.

zmodule zsh-users/zsh-history-substring-search --name zsh-history-substring-search  #Fish-like history search (up arrow) for Zsh.

zmodule zsh-users/zsh-autosuggestions --name zsh-autosuggestions                    #Fish-like autosuggestions for Zsh.


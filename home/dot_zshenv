#!/usr/bin/env zsh

###############################
# EXPORT ENVIRONMENT VARIABLE #
###############################

# export XDG_CONFIG_HOME="$HOME/.config"
# export XDG_DATA_HOME="$XDG_CONFIG_HOME/.local/share"
# export XDG_CACHE_HOME="$XDG_CONFIG_HOME/.cache"

export XDG_CONFIG_HOME=${XDG_CONFIG_HOME:-$HOME/.config}
export XDG_CACHE_HOME=${XDG_CACHE_HOME:-$HOME/.cache}
export XDG_DATA_HOME=${XDG_DATA_HOME:-$HOME/.local/share}
export XDG_STATE_HOME=${XDG_STATE_HOME:-$HOME/.local/state}

export ZDOTDIR="${XDG_CONFIG_HOME:-${HOME}/.config}/zsh"
export CODEDIR="$HOME/Code"
export ABBR_USER_ABBREVIATIONS_FILE="${XDG_CONFIG_HOME:-${HOME}/.config}/zsh/zsh-abbr/user-abbreviations"

export HISTFILE="$ZDOTDIR/.zhistory" # History filepath
export HISTSIZE=10000                # Maximum events for internal history
export SAVEHIST=10000                # Maximum events in history file

export MISE_DATA_DIR="${XDG_DATA_HOME:-${HOME}/.local/share}/mise"
export MISE_CONFIG_FILE="${XDG_CONFIG_HOME:-${HOME}/.config}/mise/config.toml"
export MISE_TRUSTED_CONFIG_PATHS="$MISE_CONFIG_FILE"
export MISE_LOG_LEVEL="info"
export MISE_FETCH_REMOTE_VERSIONS_TIMEOUT="1800 s"
